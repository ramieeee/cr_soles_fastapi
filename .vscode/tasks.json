{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Uvicorn",
      "type": "shell",
      "command": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "ENV_FILE": "${workspaceFolder}/.env"
        }
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
